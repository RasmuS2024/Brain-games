    "require": {
        "wp-cli/php-cli-tools": "^0.12.0"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.10",
        "phpstan/phpstan": "^2.1",
        "phpstan/extension-installer": "^1.4",
        "hexlet/phpstan-fp": "^3.1"
    },
    "bin": [
        "bin/brain-games",
        "bin/brain-even",
