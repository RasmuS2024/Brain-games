    "autoload": {
        "files": [
            "src/Cli.php",
            "src/Games/Even.php", 
            "src/Games/Calc.php",
            "src/Games/Gcd.php",
            "src/Games/Progression.php",
            "src/Games/Prime.php",
            "src/Engine.php" 
        ]
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
